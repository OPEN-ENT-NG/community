{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../config.yaml", "outDir": "./dist/config.yaml"
      },
      {
        "include": "../package.json", "outDir": "./dist/package.json"
      }
    ]
  }
}
