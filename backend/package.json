  "scripts": {
    "prebuild": "pnpm update @edifice.io/community-frontend",
    "build": "pnpm run clean && nest build",
    "postbuild": "cp -R ./node_modules/@edifice.io/community-frontend/dist/* ./dist",
    "start:dev": "DEV=true nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "preinstall": "npx only-allow pnpm",
    "clean": "rm -Rf dist && mkdir dist",
    "docs:pdf": "node scripts/generate-swagger-pdf.js"
  },
